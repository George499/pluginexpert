{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2019",
    "lib": ["ES2020"],
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "allowJs": true,
    "checkJs": false,
    "rootDir": "./src",
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "include": ["src/**/*", "config/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
